{
  "crons": [
    {
      "path": "/api/cron/check-price-alerts",
      "schedule": "0 */6 * * *"
    }
  ],
  "env": {
    "DATABASE_URL": "@database-url",
    "SMTP_HOST": "@smtp-host",
    "SMTP_PORT": "@smtp-port",
    "SMTP_USER": "@smtp-user",
    "SMTP_PASSWORD": "@smtp-password",
    "SMTP_FROM": "@smtp-from",
    "NEXT_PUBLIC_APP_URL": "@app-url",
    "CRON_SECRET": "@cron-secret"
  }
}
