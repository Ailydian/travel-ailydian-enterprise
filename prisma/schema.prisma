// Blog Management
model BlogPost {
  id String @id @default(cuid())

  // Content
  title   String
  slug    String  @unique
  excerpt String? @db.Text
  content String  @db.Text

  // Media
  featuredImage String?
  images        String[] @default([])

  // Organization
  category String
  tags     String[] @default([])

