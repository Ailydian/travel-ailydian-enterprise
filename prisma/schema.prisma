  // Performance
  views           Int             @default(0)
  bookings        Int             @default(0)
  revenue         Decimal         @default(0)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  partner         PartnerProfile  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  @@map("partner_listings")
  @@index([partnerId])
  @@index([listingType])
  @@index([status])
}

model PartnerPayout {
  id              String          @id @default(cuid())
  partnerId       String

  // Payout Details
  amount          Decimal
  currency        String          @default("TRY")
  period          String          // "2025-01" for January 2025

  // Status
  status          PayoutStatus    @default(PENDING)
  requestedAt     DateTime        @default(now())
  processedAt     DateTime?
  paidAt          DateTime?

  // Payment Details
  paymentMethod   String?
  transactionId   String?

  // Metadata
  metadata        Json?           // Breakdown of earnings

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  partner         PartnerProfile  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  @@map("partner_payouts")
  @@index([partnerId])
  @@index([status])
  @@index([period])
}

enum PartnerType {
  PROPERTY_OWNER
  CAR_RENTAL
  TRANSFER_PROVIDER
  VEHICLE_OWNER
  TOUR_OPERATOR
  HOTEL_MANAGER
}

enum ListingStatus {
  DRAFT
  PENDING_REVIEW
  APPROVED
  REJECTED
  SUSPENDED
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}
