  @@index([category])
  @@index([status])
  @@index([publishedAt])
  @@index([isFeatured])
  @@map("blog_posts")
}

model BlogComment {
  id     String @id @default(cuid())
  postId String

  // Author
  userId      String? // Null if guest comment
  authorName  String
  authorEmail String
  authorImage String?

  // Content
  content String @db.Text

  // Moderation
  status      CommentStatus @default(PENDING)
  moderatedBy String?
  moderatedAt DateTime?

  // Engagement
  likes Int @default(0)

  // Nested Comments
  parentId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

