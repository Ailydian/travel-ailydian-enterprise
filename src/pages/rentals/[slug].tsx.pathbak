                >
                  <Share2 className="w-5 h-5 text-lydian-text-secondary dark:text-lydian-text-muted" />
                  <span className="hidden sm:inline text-sm">Paylaş</span>
                </motion.button>
                <motion.button
                  whileHover={{ scale: 1.1 }}
