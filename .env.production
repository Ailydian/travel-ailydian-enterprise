# ===================================================
# PRODUCTION ENVIRONMENT VARIABLES - VERCEL DEPLOYMENT
# ===================================================
# IMPORTANT: Add these to Vercel Dashboard -> Settings -> Environment Variables
# https://vercel.com/your-team/travel-ailydian-enterprise/settings/environment-variables

# === CORE APPLICATION ===
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://travel.ailydian.com
NEXT_PUBLIC_API_URL=https://travel.ailydian.com/api

# === DATABASE (REQUIRED) ===
# Supabase PostgreSQL Connection String
# Get from: https://supabase.com/dashboard/project/_/settings/database
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres?pgbouncer=true"

# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Redis (Upstash recommended for Vercel)
# Get from: https://console.upstash.com/
REDIS_URL=

# === AUTHENTICATION (REQUIRED) ===
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://travel.ailydian.com
JWT_SECRET=

# === PAYMENT PROCESSING ===
# Stripe (Get from: https://dashboard.stripe.com/apikeys)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# === EMAIL SERVICE (REQUIRED) ===
# Resend (Get from: https://resend.com/api-keys)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@travel.ailydian.com
RESEND_SUPPORT_EMAIL=support@travel.ailydian.com

# === AI SERVICES (OPTIONAL) ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

GROQ_API_KEY=
GROQ_PRIMARY_MODEL=llama-3.3-70b-versatile
GROQ_FAST_MODEL=llama-3.1-8b-instant

GOOGLE_AI_API_KEY=

# === MAPS & LOCATION ===
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# === MONITORING & ANALYTICS ===
# Sentry (Get from: https://sentry.io/settings/)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=ailydian
SENTRY_PROJECT=travel-lydian

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# === CLOUD STORAGE ===
# Cloudinary (Get from: https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# === FEATURE FLAGS ===
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_BLOCKCHAIN_FEATURES=false
ENABLE_METAVERSE_TOURS=false
ENABLE_NFT_MARKETPLACE=false
ENABLE_QUANTUM_SEARCH=false

# === RATE LIMITING ===
# Upstash Redis for rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
